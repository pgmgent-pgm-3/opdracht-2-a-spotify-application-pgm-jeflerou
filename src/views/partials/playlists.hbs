<ul class="playlists">
    {{#each playlists}}

    <li class="playlist flex-container">
        <h2>{{name}}</h2>
        <div class="button-container flex-container">
            <button class="playlist-edit" data-id="{{id}}">
                <i class="fa-solid fa-pen-to-square"></i>
            </button>
            <button class="playlist-delete" data-id="{{id}}">
                <i class="fa-solid fa-trash-can"></i>
            </button>
        </div>
    </li>

    {{/each}}
</ul>