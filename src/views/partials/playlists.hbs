<div class="playlists">
<h2 class="playlists-title">Playlists</h2>
<ul>
    {{#each playlists}}

    <li class="playlist flex-container">
        <h2>{{name}}</h2>
        <div class="button-container flex-container">
            {{#editor ../user.role}}
            <button class="playlist-edit" data-id="{{id}}">
                <i class="fa-solid fa-pen-to-square"></i>
            </button>
            {{/editor}}
            {{#admin ../user.role}}
            <button class="playlist-delete" data-id="{{id}}">
                <i class="fa-solid fa-trash-can"></i>
            </button>
            {{/admin}}
        </div>
    </li>

    {{/each}}
</ul>
</div>